{
  "layer": "top",
  "position": "top",
  "height": 30,
  "modules-left": [
    "hyprland/workspaces",
    "mpris"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "tray",
    "custom/audio-selector",
    "network"
  ],
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÜí",
      "default": "ÔÑë"
    },
    "on-click": "activate"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 20
  },
  "network": {
    "interface": "wlo1",
    "format-wifi": "Ôá´       {essid} ({signalStrength}%)",
    "format-ethernet": "Ôûñ {ifname}",
    "format-disconnected": "‚ö† Disconnected",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "{ifname} connected",
    "on-click": "nmcli device wifi list"
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%I:%M %p}"
  },
  "custom/audio-selector": {
    "format": "üîä {}",
    "exec": "~/.config/waybar/scripts/audio_control.sh display",
    "interval": 1,
    "on-click": "~/.config/waybar/scripts/audio_control.sh switch",
    "tooltip": "Click to switch audio output"
  },
  "mpris": {
    "format": "{player_icon} {title} - {artist}",
    "format-stopped": "", // This hides the module when no music is playing
    "player-icons": {
      "default": "‚ñ∂",
      "spotify": "ÔÜº"
    },
    "status-icons": {
      "playing": "‚ñ∂",
      "paused": "‚è∏"
    },
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-scroll-up": "playerctl previous",
    "on-scroll-down": "playerctl next"
  }
}
